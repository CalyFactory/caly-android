<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            card:cardCornerRadius="3dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingTop="40dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="40dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="캘리 서비스 회원가입"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:text="성별을 선택해주세요."
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imv_signup_man"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/man"
                        android:layout_marginRight="15dp"
                        />

                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:id="@+id/imv_signup_woman"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/girl"
                        />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_signup_birth"
                        android:layout_width="match_parent"
                        android:inputType="date"
                        android:layout_height="wrap_content"
                        android:maxLength="4"
                        android:hint="태어난 연도를 입력해주세요(19xx)" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:id="@+id/cb_signup_policy"
                        android:layout_height="wrap_content"
                        android:text="캘리의 이용 정책에 동의합니다."
                        />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/btn_signup_proc"
            android:textSize="17dp"
            android:background="@color/colorAccent"
            android:backgroundTint="@color/colorAccent"
            android:text="회원가입"/>
    </LinearLayout>

</LinearLayout>