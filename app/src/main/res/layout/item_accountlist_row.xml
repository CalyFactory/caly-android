<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:background="@color/white_three"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="17dp"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="jspiner@naver.com"
                    android:textColor="#222222"
                    fontPath="@string/font_nanum_extra_bold"
                    android:id="@+id/tv_account_title"
                    android:textSize="16dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tv_account_info"
                    android:textSize="11dp"
                    android:textColor="#5a5a5a"
                    fontPath="@string/font_nanum_regular"
                    android:text="2017. 02. 22 가입됨 | 동기화 정상"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imv_account_sync"
                    android:layout_marginRight="20dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/refresh_2"/>


                <ImageView
                    android:id="@+id/imv_account_delete"
                    android:layout_marginRight="20dp"
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:src="@drawable/trash"/>

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>